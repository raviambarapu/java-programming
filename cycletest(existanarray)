class exist{
    public static void main(String[] args) {
        int[] array = {1, 2, 3, 4, 5, 6};
        int elementToFind = 4;
        boolean exists = containsElement(array, elementToFind);
        if (exists) {
            System.out.println(elementToFind + " exists in the array.");
        } else {
            System.out.println(elementToFind + " does not exist in the array.");
        }
    }
    public static boolean containsElement(int[] array, int elementToFind) {
        for (int element : array) {
            if (element == elementToFind) {
                return true;
            }
        }
        return false;
    }
}
